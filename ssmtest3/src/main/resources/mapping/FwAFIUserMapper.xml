<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xzj.mapper.FwAFIUserMapper">
	<resultMap type="com.xzj.domain.FwAFIUser" id="BaseResultMap">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="ALERTING_FORM_INST_ID" property="afiID"
			jdbcType="BIGINT" />
		<result column="USER_ID" property="userID" jdbcType="BIGINT" />
		<result column="WAYS" property="ways" jdbcType="VARCHAR" />
		<result column="FLAG" property="flag" jdbcType="VARCHAR" />
	</resultMap>
	<insert id="insert" parameterType="com.xzj.domain.FwAFIUser"
		useGeneratedKeys="true" keyProperty="id">
		insert into
		ew_wf_afi_user
		values(0,#{afiID},#{userID},#{ways},#{flag},#{creationDate})
	</insert>

	<select id="queryByafiId" parameterType="long"
		resultMap="BaseResultMap">
		select * from ew_wf_afi_user where alerting_form_inst_id
		=#{1}
	</select>
	
	<select id="getbyUserAndAFI" parameterType="long"
		resultMap="BaseResultMap">
		select * from ew_wf_afi_user where user_id=#{0} and
		alerting_form_inst_id=#{1}
	</select>
</mapper>
